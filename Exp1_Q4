class ShapeArea {
    // Method for rectangle
    static double area(double length, double width) {
        return length * width;
    }

    // Method for square
    static double area(double side) {
        return side * side;
    }

    // Method for circle
    static double area(float radius) {
        return Math.PI * radius * radius;
    }

    // Method for triangle
    static double area(double base, double height, boolean isTriangle) {
        return 0.5 * base * height;
    }

    public static void main(String[] args) {
        System.out.println("Area of Rectangle: " + area(5, 7));
        System.out.println("Area of Square: " + area(4));
        System.out.println("Area of Circle: " + area(3.5f));
        System.out.println("Area of Triangle: " + area(6, 8, true));
    }
}
